<% layout('layouts/boilerplate') %>
<!-- Specifies the layout template to be used -->
<div id="cluster-map"></div>
<!-- Div for the map displaying campground clusters -->
<div class="container">
  <h1>All Campgrounds</h1>
  <!-- Heading for the All Campgrounds page -->

  <!-- Loop through each campground and display its details -->
  <% for (let campground of campgrounds) { %>
  <div class="card mb-3">
    <!-- Card for each campground -->
    <div class="row">
      <div class="col-md-4">
        <!-- Check if the campground has images -->
        <% if (campground.images.length) { %>
        <img
          crossorigin="anonymous"
          class="img-fluid"
          alt="Image for <%= campground.title %>"
          <!--
          Alt
          text
          for
          the
          image
          --
        />
        src="<%= campground.images[0].url %>"
        <!-- Display the first image of the campground -->
        /> <% } else { %>
        <img
          class="img-fluid"
          alt="No image available"
          <!--
          Alt
          text
          when
          no
          image
          is
          available
          --
        />
        src="https://via.placeholder.com/300"
        <!-- Placeholder image URL -->
        /> <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>
          <!-- Campground title -->
          <p class="card-text"><%= campground.description %></p>
          <!-- Campground description -->
          <p class="card-text">
            <small class="text-muted"><%= campground.location %></small>
            <!-- Campground location -->
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">
            <!-- Link to view the campground details -->
            View <%= campground.title %>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>

<!-- Scripts for map functionality -->
<script>
  const mapToken = '<%- process.env.MAPBOX_TOKEN %>'; <!-- Mapbox token from environment variables -->
  const campgrounds = { features: <%- JSON.stringify(campgrounds) %> } <!-- JSON representation of campgrounds data -->
</script>
<script src="/javascripts/clusterMap.js"></script>
<!-- Script for clustering map points -->
